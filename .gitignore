# ==========================================
# Dependencies
# ==========================================
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
.pnp
.pnp.js

# ==========================================
# Environment Variables & Secrets
# ==========================================
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
*.pem

# ==========================================
# Build Outputs
# ==========================================
/backend/dist
/backend/build
/frontend/.next/
/frontend/out/
*.tsbuildinfo

# ==========================================
# Testing
# ==========================================
/coverage
*.lcov
.nyc_output

# ==========================================
# IDE / Editors
# ==========================================
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store
*.sublime-project
*.sublime-workspace

# ==========================================
# Logs
# ==========================================
logs
*.log
npm-debug.log*
pnpm-debug.log*

# ==========================================
# Database
# ==========================================
*.db
*.sqlite
*.sqlite3
/backend/prisma/migrations/*.sql.backup

# ==========================================
# Docker
# ==========================================
*.dockerignore.backup

# ==========================================
# Temporary Files
# ==========================================
*.tmp
*.temp
*.backup
*.old
*.bak
.cache/

# ==========================================
# OS Files
# ==========================================
Thumbs.db
.DS_Store
desktop.ini

# ==========================================
# Python (if any python scripts)
# ==========================================
__pycache__/
*.py[cod]
*$py.class
.Python
*.so
.venv/
env/
venv/

# ==========================================
# Next.js Specific
# ==========================================
.next/
out/
.vercel

# ==========================================
# Prisma
# ==========================================
/backend/node_modules/.prisma/

# ==========================================
# AWS & Deployment
# ==========================================
.aws-sam/
.terraform/
*.tfstate
*.tfstate.backup

# ==========================================
# Others
# ==========================================
*.pid
*.seed
*.pid.lock

# ==========================================
# Keep Working Docs
# ==========================================
!working-docs/
!DOCS-root/
